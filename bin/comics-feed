#!/usr/bin/env node

var argv = require("nomnom")
  .script("getitle")
  .option('url', {
    position: 0,
    help: "feed url or file to parse",
    list: false,
    required: true
  })
  .option('verbose', {
    abbr: 'v',
    flag: true,
    help: "Print processing logs"
  })
  .option('maxitems', {
	abbr: 'm',
	metavar: "N",
	default: 0,
    help: "Max items to keep in feed (0 for no max)"
  })
  .help("Author: ".bold +
    "leesei@gmail.com".underline + "       "+
    "Licence: ".bold + "MIT\n")
  .parse();

// console.log(argv);

require('../lib/main.js').embedStrips(
  {
    url: argv.url,
    verbose: argv.verbose,
	maxitems: argv.maxitems,
  },
  function (err, feedXml) {
    if (err) {
      console.error("error parsing: " + argv.url);
      console.error(err);
      return;
    }

    console.log(feedXml);
  }
);
